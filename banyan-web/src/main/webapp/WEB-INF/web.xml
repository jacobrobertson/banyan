<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>species-tapestry</display-name>
    <context-param>
        <param-name>tapestry.app-package</param-name>
        <param-value>com.robestone.species.tapestry</param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.exception-report-page</param-name>
        <param-value>search</param-value>
    </context-param>
    <context-param>
  		<param-name>contextConfigLocation</param-name>
  		<param-value>classpath:com/robestone/species/parse/SpeciesServices.spring.xml</param-value>
	</context-param>
    <filter>
    	<filter-name>PathFixerFilter</filter-name>
    	<filter-class>com.robestone.species.tapestry.services.PathFixerFilter</filter-class>
  	</filter>
    <filter-mapping>
        <filter-name>PathFixerFilter</filter-name>
        <url-pattern>/search/icons/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PathFixerFilter</filter-name>
        <url-pattern>/search/search.detail/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PathFixerFilter</filter-name>
        <url-pattern>/search/search.tree/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PathFixerFilter</filter-name>
        <url-pattern>/search.tree/search.tree/*</url-pattern>
    </filter-mapping>
    <filter>
    	<filter-name>app</filter-name>
    	<filter-class>org.apache.tapestry5.spring.TapestrySpringFilter</filter-class>
  	</filter>
    <filter-mapping>
        <filter-name>app</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
      
